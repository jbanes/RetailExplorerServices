<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
    ">
    <bean class="com.invirgance.convirgance.web.service.SelectService">
        <property name="parameters">
            <list>
                <bean class="com.invirgance.convirgance.web.parameter.RequestParameter">
                    <property name="name" value="franchise" />
                </bean>
                <bean class="com.invirgance.convirgance.web.parameter.RequestParameter">
                    <property name="name" value="brand" />
                </bean>
                <bean class="com.invirgance.convirgance.web.parameter.RequestParameter">
                    <property name="name" value="category" />
                </bean>
                <bean class="com.invirgance.convirgance.web.parameter.RequestParameter">
                    <property name="name" value="type" />
                </bean>
                <bean class="com.invirgance.convirgance.web.parameter.RequestParameter">
                    <property name="name" value="subtype" />
                </bean>
            </list>
        </property>
        <property name="binding">
            <bean class="com.invirgance.convirgance.web.binding.QueryBinding">
                <property name="jndiName" value="jdbc/retail" />
                <property name="sql">
                    <value>
                    <![CDATA[
                        select distinct
                            p."id",
                            p."Name",
                            p."Price",
                            b."Name" as "BrandName",
                            c."Name" as "CategoryName",
                            c."Type" as "Type",
                            c."SubType" as "SubType"
                        from products p
                        join brands b on b."id" = p."BrandId"
                        join categories c on c."id" = p."CategoryId"
                        join (select distinct "ProductId", "FranchiseId" from sales) s on s."ProductId" = p."id"
                        where p."id" > 0
                        and (p."BrandId" = :brand or :brand is null)
                        and (c."Name" = :category or :category is null)
                        and (c."Type" = :type or :type is null)
                        and (p."CategoryId" = :subtype or :subtype is null)
                        and (s."FranchiseId" = :franchise or :franchise is null)
                        order by p."id"
                    ]]>
                    </value>
                </property>
            </bean>
        </property>
        <property name="output">
            <bean class="com.invirgance.convirgance.output.JSONOutput" />
        </property>
    </bean>
</beans>
